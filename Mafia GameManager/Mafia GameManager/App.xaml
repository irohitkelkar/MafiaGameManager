<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mafia_GameManager.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#293241</Color>
            <Color x:Key="PrimaryButton">#ee6c4d</Color>
            <Color x:Key="SecondaryButton">#3d5a80</Color>
            <Color x:Key="StartButton">#3d5a80</Color>
            <Color x:Key="CellColor">#e0fbfc</Color>
            <Color x:Key="CellColor2">#98c1d9</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>